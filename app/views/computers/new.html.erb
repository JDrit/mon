<% provide(:title, "New Computer") %>
<br />
<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><strong>Current Computers</strong></div>
    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Api Key</th>
                <th>Up time</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% @computers.each do |computer| %>
                <tr>
                    <td><%= link_to computer.name, computer %></td>
                    <td><%= computer.api_key %></td>
                    <td><%= display_uptime computer.uptime %></td>
                    <td>
                        <%= link_to [:edit, computer] do %>
                            <button type="button" class="btn btn-primary">Edit</button>
                        <% end %>
                        <button class="btn btn-danger" data-toggle="modal" data-target=".bs-example-modal-sm">Delete</button>
                        <div class="modal fade bs-example-modal-sm" tabindex="-1" 
                            role="dialog" aria-labelledby="mySmallModalLabel" 
                            aria-hidden="true">
                            <div class="modal-dialog modal-sm">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                                        <h4 class="modal-title" id="mySmallModalLabel">Delete?</h4>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to?
                                        <%= link_to computer, method: :delete do %> 
                                            <button type="button" class="btn btn-danger">Delete</button>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<h2>New Computer</h2>
<%= render :partial => "form", :locals => { :computer => @new_computer, :method => :get } %>
</div>

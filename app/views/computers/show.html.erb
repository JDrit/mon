    var series = [];
    Object.keys(data).forEach(function(key) {
        series.push({name: key, 
            data: data[key],
            gapSize: 5,
            tooltip: {
                pointFormat: '<span style="color:{series.color}">{series.name}</span>: <b>{point.y} kb/s</b><br/>',

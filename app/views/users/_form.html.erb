<div class="container well" style="max-width:900px;">
<%= form_for user do |f| %>
    <% if user.errors[:name] != [] %>
        <div class="form-group has-error">
            <label class="control-label" for="inputError1">Name - <%= user.errors[:name][0] %></label>
            <%= f.text_field :name, placeholder: "name", class: "form-control" %>
        </div>
    <% else %>
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "name", class: "form-control" %>
    <% end %>

    <% if user.errors[:email] != [] %>
        <div class="form-group has-error">
            <label class="control-label" for="inputError1">Email - <%= user.errors[:email][0] %></label>
            <%= f.text_field :email, placeholder: "email", class: "form-control" %>
        </div>
    <% else %>
        <%= f.label :email %>
        <%= f.text_field :email, placeholder: "email", class: "form-control" %>
    <% end %>

    <% if user.errors[:password] != [] %>
        <div class="form-group has-error">
            <label class="control-label" for="inputError1">Password - <%= user.errors[:password][0] %></label>
            <%= f.password_field :password, placeholder: "password", class: "form-control" %>
        </div>
    <% else %>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "password", class: "form-control" %>
    <% end %>

    <% if user.errors[:password_confirmation] != [] %>
        <div class="form-group has-error">
            <label class="control-label" for="inputError1">Password Confirmation - <%= user.errors[:password_confirmation][0] %></label>
            <%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "form-control" %>
        </div>
    <% else %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, placeholder: "password confirmation", class: "form-control" %>
    <% end %>

    <br />
    <%= f.submit  class: "btn btn-large btn-primary", method: method %>
<% end %>
</div>
